{
    "name": "blackiya",
    "description": "Chrome extension to capture and save conversation JSON from ChatGPT and other LLMs",
    "private": true,
    "version": "1.4.0",
    "type": "module",
    "author": "Ragaeeb Haq",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ragaeeb/blackiya.git"
    },
    "bugs": {
        "url": "https://github.com/ragaeeb/blackiya/issues"
    },
    "homepage": "https://github.com/ragaeeb/blackiya#readme",
    "engines": {
        "bun": ">=1.3.6",
        "node": ">=25.0.0"
    },
    "packageManager": "bun@1.3.6",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "build": "bun run check && tsc --noEmit && wxt build",
        "build:firefox": "bun run check && tsc --noEmit && wxt build -b firefox",
        "zip": "bun run check && tsc --noEmit && wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "compile": "tsc --noEmit",
        "postinstall": "wxt prepare",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "check": "biome check --write .",
        "lint": "biome lint .",
        "format": "biome format --write ."
    },
    "dependencies": {
        "preact": "^10.28.2",
        "tslog": "^4.10.2"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.13",
        "@happy-dom/global-registrator": "^20.3.9",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^12.0.2",
        "@semantic-release/npm": "^13.1.3",
        "@types/bun": "^1.3.6",
        "happy-dom": "^20.3.9",
        "semantic-release": "^25.0.2",
        "typescript": "^5.9.3",
        "wxt": "^0.20.13"
    }
}
